FROM phusion/baseimage:focal-1.0.0

LABEL maintainer="Mahmoud Zalt <mahmoud@zalt.me>"

ENV DEBIAN_FRONTEND=noninteractive
RUN locale-gen en_US.UTF-8

ENV LANGUAGE=en_US.UTF-8
